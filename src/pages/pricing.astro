---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Solo página",
    price: "$800",
    popular: false,
    features: [
      "Diseño personalizado.",
      "Despliegue y migración.",
      "Optimización móvil.",
      "Redes sociales.",
      "Soporte técnico.",
    ],
    button: {
      text: "Contáctenos",
      link: "/contact",
    },
  },
  {
    name: "Estándar",
    price: {
      monthly: "$700",
      annual: "$16",
      discount: "",
      original: "/mes",
    },
    popular: true,
    features: [
      "SEO y visibilidad.",
      "Reportes mensuales.",
      "Velocidad mejorada.",
      "Gestión de contenidos.",
      "Soporte ampliado.",
    ],
    button: {
      text: "Contáctenos",
      link: "/contact",
    },
  },
  {
    name: "Pro",
    price: "Personalizado",
    popular: false,
    features: [
      "Estrategias Paid Media.",
      "Monitoreo y análisis.",
      "Comunity managment.",
      "Frameworks avanzados.",
      "Consultoría estratégica.",
    ],
    button: {
      text: "Contáctenos",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Precios</Fragment>
      <Fragment slot="desc">
        Precios simples y predecibles. Sin sorpresas.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
